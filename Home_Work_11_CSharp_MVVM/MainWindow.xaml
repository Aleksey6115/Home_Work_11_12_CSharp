<Window x:Class="Home_Work_11_CSharp_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Home_Work_11_CSharp_MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.95*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>

        <Menu VerticalAlignment="Top"
              Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="2">
            <MenuItem Header="Файл">
                <MenuItem 
                    Header="Открыть"
                    Command="{Binding OpenFileCommand}"/>
                <MenuItem 
                    Header="Сохранить"
                    Command="{Binding SaveFileCommand}"/>
                <MenuItem 
                    Header="Сгенерировать базу"
                    Command="{Binding GeneratorBase}"/>
            </MenuItem>

            <MenuItem Header="Редактирование">
                <MenuItem 
                    Header="Добавить клиента"
                    Command="{Binding AddClient}"/>
                <MenuItem
                    Header="Удалить текущего клиента"
                    Command="{Binding RemoveClient}"
                    CommandParameter="{Binding Selected_client}"/>
            </MenuItem>
        </Menu>


        <DataGrid Grid.Row="1"
                  Grid.Column="0"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Clients}"
                  SelectedItem="{Binding Selected_client}"
                  CanUserAddRows="False">

            <DataGrid.Resources>
                <local:BindingProxy x:Key="proxy" Data="{Binding}"/>
            </DataGrid.Resources>
            
            
            <DataGrid.Columns>

                <DataGridTextColumn
                    Header="Имя"
                    Width="20*"
                    Binding="{Binding First_name}"
                    IsReadOnly="{Binding Data.IsReadOnly, Source={StaticResource proxy}, UpdateSourceTrigger=PropertyChanged}"/>


                <DataGridTextColumn
                    Header="Фамилия"
                    Width="20*"
                    Binding="{Binding Last_name}"
                    IsReadOnly="{Binding Data.IsReadOnly, Source={StaticResource proxy}, UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn
                    Header="Номер телефона"
                    Width="20*"
                    Binding="{Binding Telefon_number}"
                    IsReadOnly="False"/>

                <DataGridTextColumn
                    Header="Номер паспорта"
                    Width="20*"
                    Binding="{Binding Passport_number}"
                    IsReadOnly="{Binding Data.IsReadOnly, Source={StaticResource proxy}, UpdateSourceTrigger=PropertyChanged}"/>
            </DataGrid.Columns>

        </DataGrid>

        <GroupBox
            Grid.Row="1"
            Grid.Column="1"
            Header="Изменения">

            <ListBox 
                x:Name="changes_client"
                DataContext="{Binding Selected_client}"
                ItemsSource="{Binding changes}"
                SelectedItem="{Binding Changes}">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock Text="{Binding Path=Date_last_changes}"/>
                            <TextBlock Text="{Binding Path=Changes_type}"/>
                            <TextBlock Text="{Binding Path=Author_of_changes}"/>
                            <TextBlock Text="{Binding Path=Edit_value}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
        </GroupBox>

    </Grid>
</Window>
